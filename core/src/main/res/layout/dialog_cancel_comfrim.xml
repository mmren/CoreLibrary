<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center">

    <LinearLayout
        android:id="@+id/content_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marg_50"
        android:layout_marginRight="@dimen/marg_50"
        android:background="@drawable/dialog_roundshape"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/title"
            style="@style/text_000000_32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/marg_50"
            android:text="暂时不还款"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_dialog"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/dialog_cancel"
                style="@style/text_0080FC_34"
                android:layout_width="0dp"
                android:layout_height="@dimen/marg_100"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/cancel"/>

            <View
                android:id="@+id/dialog_divider"
                android:layout_width="1px"
                android:layout_height="@dimen/marg_80"
                android:background="@color/divider_dialog">

            </View>

            <TextView
                android:id="@+id/dialog_confirm"
                style="@style/text_0080FC_34"
                android:layout_width="0dp"
                android:layout_height="@dimen/marg_100"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/confirm"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>